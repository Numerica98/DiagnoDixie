<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_app"
        android:orientation="vertical"
        tools:context=".questions.Question20">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tv_question20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_view"
                    android:text="20. Que letra es?"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_main"/>

            <RadioGroup
                    android:id="@+id/rg_question20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <RadioButton
                        android:id="@+id/rb_question20_opc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="P "
                        android:textSize="@dimen/text_main"
                        android:layout_margin="@dimen/margin_view"/>

                <RadioButton
                        android:id="@+id/rb_question20_opc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T"
                        android:textSize="@dimen/text_main"
                        android:layout_margin="@dimen/margin_view"/>

                <RadioButton
                        android:id="@+id/rb_question20_opc3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="D"
                        android:textSize="@dimen/text_main"
                        android:layout_margin="@dimen/margin_view"/>

            </RadioGroup>

            <Button
                    android:id="@+id/bt_Question20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_main"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/text_siguiente"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_main" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>