<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_app"
        tools:context=".questions.Question1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                        android:id="@+id/tv_question1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                    android:layout_weight="2"
                        android:layout_margin="@dimen/margin_view"
                        android:text="@string/text_question1"
                        android:textColor="@color/text"
                        android:textSize="@dimen/text_main"
                        android:fontFamily="@font/righteous"/>

                <ImageView
                        android:id="@+id/character_1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen_image"
                    android:layout_weight="1"
                        android:layout_marginLeft="@dimen/dimen_left_character"
                        android:src="@drawable/ic_play_arrow_black_60dp"/>

            </LinearLayout>

            <ImageView
                    android:id="@+id/btn_play_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_view"
                android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_play_arrow_black_60dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_view"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tv_question1_g_0.0"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_margin="@dimen/margin_view"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/text"
                    android:text="@string/text_g"
                    android:textSize="@dimen/text_main"
                    android:background="@color/colorWhite"
                    android:fontFamily="@font/righteous"/>

                <TextView
                    android:id="@+id/tv_question1_p_0.1"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_toRightOf="@+id/tv_question1_g_0.0"
                    android:layout_margin="@dimen/margin_view"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@color/text"
                    android:text="@string/text_p"
                    android:textSize="@dimen/text_main"
                    android:background="@color/colorWhite"
                    android:fontFamily="@font/righteous"/>

                <TextView
                    android:id="@+id/tv_question1_q_1.0"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_below="@+id/tv_question1_g_0.0"
                    android:layout_margin="@dimen/margin_view"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@color/text"
                    android:text="@string/text_q"
                    android:textSize="@dimen/text_main"
                    android:background="@color/colorWhite"
                    android:fontFamily="@font/righteous"/>

                <TextView
                    android:id="@+id/tv_question1_p_1.1"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_toRightOf="@+id/tv_question1_q_1.0"
                    android:layout_below="@+id/tv_question1_p_0.1"
                    android:layout_margin="@dimen/margin_view"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@color/text"
                    android:text="@string/text_p"
                    android:textSize="@dimen/text_main"
                    android:background="@color/colorWhite"
                    android:fontFamily="@font/righteous"/>

                <TextView
                    android:id="@+id/tv_question1_p_2.0"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_below="@+id/tv_question1_q_1.0"
                    android:layout_margin="@dimen/margin_view"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@color/text"
                    android:text="@string/text_p"
                    android:textSize="@dimen/text_main"
                    android:background="@color/colorWhite"
                    android:fontFamily="@font/righteous"/>

                <TextView
                    android:id="@+id/tv_question1_g_2.1"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_toRightOf="@+id/tv_question1_p_2.0"
                    android:layout_below="@+id/tv_question1_p_1.1"
                    android:layout_margin="@dimen/margin_view"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@color/text"
                    android:text="@string/text_g"
                    android:textSize="@dimen/text_main"
                    android:background="@color/colorWhite"
                    android:fontFamily="@font/righteous"/>

            </RelativeLayout>

            <Button
                android:id="@+id/bt_Question1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_main"
                android:layout_gravity="center_horizontal"
                android:text="@string/text_siguiente"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_main"
                android:background="@color/background_button"
                android:fontFamily="@font/righteous"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>