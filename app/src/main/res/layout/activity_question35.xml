<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_app"
        android:orientation="vertical"
        tools:context=".questions.Question35">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                <TextView
                        android:id="@+id/tv_question30"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_view"
                        android:text="@string/text_question35"
                        android:textColor="@color/text"
                        android:textSize="@dimen/text_main"
                        android:fontFamily="@font/righteous"/>

                <ImageView
                        android:id="@+id/character_35"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen_image"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/dimen_left_character"
                        android:src="@drawable/ic_play_arrow_black_60dp"/>
            </LinearLayout>

            <RadioGroup
                    android:id="@+id/rg_question35"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/righteous">

                <RadioButton
                        android:id="@+id/rb_question35_opc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_g"
                        android:textSize="@dimen/text_main"
                        android:layout_margin="@dimen/margin_view"
                        android:fontFamily="@font/righteous"/>

                <RadioButton
                        android:id="@+id/rb_question35_opc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_q"
                        android:textSize="@dimen/text_main"
                        android:layout_margin="@dimen/margin_view"
                        android:fontFamily="@font/righteous"/>


            </RadioGroup>

            <Button
                    android:id="@+id/bt_Question35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_main"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/text_siguiente"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_main"
                    android:fontFamily="@font/righteous"
            android:background="@color/background_button"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>