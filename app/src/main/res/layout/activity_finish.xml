<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/background_app"
    tools:context=".activities.FinishActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_congrats"
                android:textColor="@color/text"
                android:textSize="@dimen/text_main"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/iv_characterSelected"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="@dimen/margin_view"
                android:src="@drawable/dixielogo" />

            <TextView
                android:id="@+id/tv_Thanks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_view"
                android:text="Gracias por jugar junto a: "
                android:textSize="@dimen/text_main"
                android:textAlignment="center"
                android:textColor="@color/text"/>

            <TextView
                android:id="@+id/tv_CharacterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_view"
                android:text="Nombre"
                android:textSize="@dimen/text_main"
                android:textStyle="italic"
                android:textAlignment="center"
                android:textColor="@color/text"/>

            <TextView
                android:id="@+id/tv_PasswordIndication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_view"
                android:text="@string/text_indication_password_result"
                android:textSize="@dimen/text_main"
                android:textAlignment="center"
                android:textColor="@color/text"/>

            <EditText
                android:id="@+id/ed_PaswwordUserConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_view"
                android:background="@color/colorWhite"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:hint=" Ej: *********"
                android:textSize="@dimen/text_main" />

            <Button
                android:id="@+id/bt_NextResult"
                android:layout_width="@dimen/width_button"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_view"
                android:text="@string/text_siguiente"
                android:textSize="@dimen/text_main"
                android:textColor="@color/text_button"
                android:background="@color/background_button"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>