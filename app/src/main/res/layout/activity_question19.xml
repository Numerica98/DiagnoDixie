<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_app"
        android:orientation="vertical"
        tools:context=".questions.Question19">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_question19"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_view"
                    android:text="@string/text_question19"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_main"
                    android:fontFamily="@font/righteous"/>

                <ImageView
                    android:id="@+id/character_19"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_image"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dimen_left_character"
                    android:src="@drawable/ic_play_arrow_black_60dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/btn_play_19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_view"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_play_arrow_black_60dp"/>

            <RadioGroup
                android:id="@+id/rg_question19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rb_question19_opc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_p_mayus"
                    android:textSize="@dimen/text_main"
                    android:layout_margin="@dimen/margin_view"
                    android:fontFamily="@font/righteous"/>

                <RadioButton
                    android:id="@+id/rb_question19_opc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_t_mayus"
                    android:textSize="@dimen/text_main"
                    android:layout_margin="@dimen/margin_view"
                    android:fontFamily="@font/righteous"/>

                <RadioButton
                    android:id="@+id/rb_question19_opc3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_d_mayus"
                    android:textSize="@dimen/text_main"
                    android:layout_margin="@dimen/margin_view"
                    android:fontFamily="@font/righteous"/>

            </RadioGroup>

            <Button
                android:id="@+id/bt_Question19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_main"
                android:layout_gravity="center_horizontal"
                android:text="@string/text_siguiente"
                android:textColor="@color/colorWhite"
                android:background="@color/background_button"
                android:textSize="@dimen/text_main"
                android:fontFamily="@font/righteous"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>