<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/green_color"
        tools:context=".activities.ResultActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_title_result"
                android:textColor="@color/text"
                android:textSize="@dimen/dimen_text_normal"
                android:layout_margin="@dimen/margin_view"
                android:textAlignment="center"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/tv_AnswerCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_view"
                android:text="@string/text_answers"
                android:textAlignment="center"
                android:textSize="@dimen/dimen_text_normal"
                android:textColor="@color/text"/>

            <TextView
                android:id="@+id/tv_AnswerCountDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_view"
                android:text="0"
                android:textSize="@dimen/dimen_text_normal"
                android:textColor="@color/text"/>

            <TextView
                android:id="@+id/tv_Recomendation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_view"
                android:text="@string/text_diagnostic"
                android:textAlignment="center"
                android:textSize="@dimen/dimen_text_normal"
                android:textColor="@color/text"/>

            <TextView
                android:id="@+id/tv_RecomendationDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_view"
                android:text="Diagnostico"
                android:textAlignment="center"
                android:textSize="@dimen/dimen_text_normal"
                android:textColor="@color/text"/>

            <Button
                android:id="@+id/bt_NextFinish"
                android:layout_width="@dimen/width_button"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_view"
                android:text="@string/text_terminar"
                android:textSize="@dimen/dimen_text_normal"
                android:textColor="@color/text_button"
                android:background="@color/background_button"
                tools:ignore="HardcodedText" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>