<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center"
              android:background="@color/background_app">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_ChooseCharacter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:text="@string/text_title_character"
                android:textAlignment="center"
                android:textColor="@color/text"/>

            <RelativeLayout
                android:id="@+id/rl_characters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_view">

                <ImageView
                    android:id="@+id/iv_cat"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="@dimen/margin_view"
                    android:src="@drawable/neko"/>

                <TextView
                    android:id="@+id/tv_nameCat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_cat"
                    android:textSize="@dimen/text_main"
                    android:layout_marginLeft="@dimen/dimen_name_left"
                    android:text="Neko"
                    android:textAlignment="center"
                    android:textColor="@color/text"/>

                <ImageView
                    android:id="@+id/iv_dog"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="@dimen/margin_view"
                    android:layout_toEndOf="@+id/iv_cat"
                    android:layout_toRightOf="@+id/iv_cat"
                    android:src="@drawable/dogui"/>

                <TextView
                    android:id="@+id/tv_nameDog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_dog"
                    android:layout_toRightOf="@+id/tv_nameCat"
                    android:textSize="@dimen/text_main"
                    android:layout_marginLeft="@dimen/dimen_name_rigth"
                    android:text="Dogui"
                    android:textAlignment="center"
                    android:textColor="@color/text"/>

                <ImageView
                    android:id="@+id/iv_dinosaur"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="@dimen/margin_view"
                    android:layout_below="@+id/tv_nameCat"
                    android:src="@drawable/rex" />

                <TextView
                    android:id="@+id/tv_nameDinosaur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_dinosaur"
                    android:textSize="@dimen/text_main"
                    android:layout_marginLeft="@dimen/dimen_name_left"
                    android:text="Rex"
                    android:textAlignment="center"
                    android:textColor="@color/text"/>

                <ImageView
                    android:id="@+id/iv_chicken"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="@dimen/margin_view"
                    android:layout_toEndOf="@+id/iv_dinosaur"
                    android:layout_toRightOf="@+id/iv_dinosaur"
                    android:layout_alignBaseline="@+id/iv_dinosaur"
                    android:layout_below="@+id/tv_nameDog"
                    android:src="@drawable/pio" />

                <TextView
                    android:id="@+id/tv_nameChicken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_chicken"
                    android:layout_toRightOf="@+id/tv_nameDinosaur"
                    android:textSize="@dimen/text_main"
                    android:layout_marginLeft="@dimen/dimen_name_rigth"
                    android:text="Pio"
                    android:textAlignment="center"
                    android:textColor="@color/text"/>

                <ImageView
                    android:id="@+id/iv_shark"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="@dimen/margin_view"
                    android:layout_below="@+id/tv_nameDinosaur"
                    android:src="@drawable/sharky" />

                <TextView
                    android:id="@+id/tv_nameShark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_shark"
                    android:textSize="@dimen/text_main"
                    android:layout_marginLeft="@dimen/dimen_name_left"
                    android:text="Sharky"
                    android:textAlignment="center"
                    android:textColor="@color/text"/>

                <ImageView
                    android:id="@+id/iv_penguin"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="@dimen/margin_view"
                    android:layout_toEndOf="@+id/iv_shark"
                    android:layout_toRightOf="@+id/iv_shark"
                    android:layout_below="@+id/iv_chicken"
                    android:src="@drawable/pingui" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>