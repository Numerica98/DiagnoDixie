<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:background="@color/background_app"
    android:orientation="vertical"
        tools:context=".questions.Question4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_question4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_view"
                    android:text="@string/text_question4"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_main"/>

                <ImageView
                    android:id="@+id/btn_play_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_play_arrow_black_60dp"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_view"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tv_question4_d_0.0"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_margin="@dimen/margin_view"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@color/text"
                    android:text="@string/text_d"
                    android:textSize="@dimen/text_main"
                    android:background="@color/colorWhite"/>

                <TextView
                    android:id="@+id/tv_question4_b_0.1"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_toRightOf="@+id/tv_question4_d_0.0"
                    android:layout_margin="@dimen/margin_view"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@color/text"
                    android:text="@string/text_b"
                    android:textSize="@dimen/text_main"
                    android:background="@color/colorWhite"/>

                <TextView
                    android:id="@+id/tv_question4_p_1.0"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_below="@+id/tv_question4_d_0.0"
                    android:layout_margin="@dimen/margin_view"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@color/text"
                    android:text="@string/text_p"
                    android:textSize="@dimen/text_main"
                    android:background="@color/colorWhite"/>

                <TextView
                    android:id="@+id/tv_question4_d_1.1"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_toRightOf="@+id/tv_question4_p_1.0"
                    android:layout_below="@+id/tv_question4_b_0.1"
                    android:layout_margin="@dimen/margin_view"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@color/text"
                    android:text="@string/text_d"
                    android:textSize="@dimen/text_main"
                    android:background="@color/colorWhite"/>

                <TextView
                    android:id="@+id/tv_question4_d_2.0"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_below="@+id/tv_question4_p_1.0"
                    android:layout_margin="@dimen/margin_view"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@color/text"
                    android:text="@string/text_d"
                    android:textSize="@dimen/text_main"
                    android:background="@color/colorWhite"/>

                <TextView
                    android:id="@+id/tv_question4_b_2.1"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_toRightOf="@+id/tv_question4_d_2.0"
                    android:layout_below="@+id/tv_question4_d_1.1"
                    android:layout_margin="@dimen/margin_view"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@color/text"
                    android:text="@string/text_b"
                    android:textSize="@dimen/text_main"
                    android:background="@color/colorWhite"/>

            </RelativeLayout>

            <Button
                android:id="@+id/bt_Question4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_main"
                android:layout_gravity="center_horizontal"
                android:text="@string/text_siguiente"
                android:textColor="@color/text"
                android:textSize="@dimen/text_main" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>